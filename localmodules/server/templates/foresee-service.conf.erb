description "start and stop the foresee server"
version "1.0"
author "Varokas Panusuwan"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 15 5

env PORT=<%= @port %>

script
  export HOME="/root"
  chdir <%= @path %>
  exec /usr/bin/node <%= @path %>/app.js >> /var/log/<%= @logfile_name %> 2>&1
end script
